<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:iot="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/common_gap"
        iot:cardElevation="10dp"
        iot:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/common_gap"
                android:text="@string/choose_date_header"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choose_date_label"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date_choose_fragment_selected_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_gap"
                tools:text="05/09/1989" />

            <Button
                android:id="@+id/date_choose_fragment_choose_date_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_gap"
                android:background="?attr/selectableItemBackground"
                android:paddingEnd="@dimen/common_gap"
                android:paddingLeft="@dimen/common_gap"
                android:paddingRight="@dimen/common_gap"
                android:paddingStart="@dimen/common_gap"
                android:text="@string/button_choose_date"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/date_choose_fragment_confirm_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:paddingEnd="@dimen/common_gap"
                android:paddingLeft="@dimen/common_gap"
                android:paddingRight="@dimen/common_gap"
                android:paddingStart="@dimen/common_gap"
                android:text="@string/choose_date_confirm_button"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>