<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dosssik.iotexample.ui.DashboardActivity">

    <Button
        android:id="@+id/button_state"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="state" />

    <TextView
        android:id="@+id/state_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_state"
        android:text="State" />

    <Button
        android:id="@+id/button_result"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@+id/state_text_view"
        android:text="result" />

    <TextView
        android:id="@+id/resutl_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_result"
        android:text="result" />

    <Button
        android:id="@+id/button_start"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@id/resutl_text_view"
        android:text="start" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/button_start" />


</RelativeLayout>
